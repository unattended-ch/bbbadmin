#!/bin/sh

#DEBHELPER#

set -e
SRC=~
NAM=bbbadmin
DST=/opt
DEST=$DST/$NAM
WWW=/var/www/html
USR=www-data
TMPCONF=/$SUDO_USER/bbb_admin.json

change_owner() {
    if id -u $1 > /dev/null 2>&1; then
	echo "Setting rights for [$1]"
	chown ${1}:${1} $DEST -R
    fi
}

# Create symbolic link if not exists
if [ -d "$WWW" ]; then
    echo "Setting symbolic link [$WWW/$NAM]"
    if [ -f "$WWW/$NAM" ]; then
        rm -f $WWW/$NAM
    fi
    ln -s $DEST $WWW/
fi

# Set user rights to $USR
change_owner $USR

# Get temporary config if exists
if [ -f "$TMPCONF" ]; then
    cp -v $TMPCONF $DEST/
fi
